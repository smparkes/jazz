%html{html_attrs}
  %head
    %title jazrb specs
  %body
    %script{:type => "text/javascript", :src=>"../../vendor/jquery/dist/jquery.js"}
    %script{:type => "text/javascript", :src=>"../../vendor/json2/json2.js"}
    :javascript
      (function(){
        var global = (function(){return this;}());
        global.jazrb = global.jazrb || {};
        global.jazrb.helper = global.jazrb.helper || "../../lib/jazrb/spec_helper.js";
        document.write("<script type='text/javascript' src='"+global.jazrb.helper+"'></s"+"cript>");
      }());
    :javascript
      (function(){
        var match = window.location.toString().match(/\?specs=([^&]+)/);
        if(match){
          var specs = JSON.parse(unescape(match[1]));
          for(var i=0; i < specs.length; i++ ) {
            document.write("<script type='text/javascript' src='" + specs[i] +"'></s"+"cript>");
          }
        }
      }());

